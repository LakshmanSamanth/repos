
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageDB.cshtml";
}

<h2>Create</h2>

<form action="/Products/Create"  method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="text" class="form-control" placeholder="Product Name" id="ProductName" />
        </div>
        <div class="form-group col-md-6">
            <label for="Price">Price</label>
            <input type="number" class="form-control" placeholder="Price" id="Price" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="DateOfPurchase">Date Of Purchase</label>
            <input type="date" class="form-control" placeholder="Date Of Purchase" id="DateOfPurchase" />
        </div>
        <div class="form-group col-md-6">
            <label for="AvailabilityStatus">Availability Status</label>
            <input type="text" class="form-control" placeholder="Availability Status" id="AvailabilityStatus" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="CategoryID">Category ID</label>
            <input type="text" class="form-control" placeholder="CategoryID" id="CategoryID" />
        </div>
        <div class="form-group col-md-6">
            <label for="BrandID">Brand Id</label>
            <input type="text" class="form-control" placeholder="Brand Id" id="BrandID" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Active" />
            <label class="form-check-label" for="Active">
                Active
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a href="/Products/index">Cancel</a>

</form>

